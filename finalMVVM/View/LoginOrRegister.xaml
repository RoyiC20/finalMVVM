<Page x:Class="finalMVVM.View.LoginOrRegister"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:finalMVVM.View"
        WindowWidth="1075" WindowHeight="630"
      Title="LoginOrRegister">

    <Grid Background="LightBlue">
        
        <Label Content="Welcome to the program" FontWeight="Bold" HorizontalContentAlignment="Center" FontSize="50" Margin="40,10,40,360" />

        <Button Name="SendToLogin" Height="60" Width="250" Margin="40,178,500,178" Content="Login" FontSize="40" Click="Button_Click"/>
        <Button Name="SendToRegister" Height="60" Width="250" Margin="500,178,40,178" Content="Register" FontSize="40" Click="SendToRegister_Click"/>
        <Frame x:Name="MainFrame" Navigated="MainFrame_Navigated_1" Margin="40,0,40,360"/>
    </Grid>
</Page>
